---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Early Detectiion",
    description:
      "Cancer awareness is an important aspect of maintaining good health and early detection. Early detection of cancer can greatly improve the chances of successful treatment and survival. Therefore, it is essential to be aware of the warning signs and symptoms of cancer, as well as the recommended screening tests for each type of cancer.",
    icon: "mdi:handshake",
  },
];
---

<ContentSection title="What we can do?" id="features">
  <Fragment slot="lead">
    <iframe
      width="560"
      height="315"
      src="https://www.youtube.com/embed/USmu0scNcSs"
      title="YouTube video player"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen></iframe>
  </Fragment>
  <ul class="al grid max-w-6xl grid-cols-1">
    {
      features.map(({ title, description, icon }) => (
        <li class="border-default bg-offset flex flex-col items-center gap-4 border p-6">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} />
          </div>
          <p class="text-center text-xl font-extrabold">{title}</p>
          <p class="text-offset text-center text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
